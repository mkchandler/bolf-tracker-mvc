@{
  ViewBag.Title = "Statistics - League Manager - Bolf Tracker";
}
<div class="page-header">
  <div class="row">
    <div class="col-md-8">
      <h1>League Manager</h1>
    </div>
  </div>
</div>
<ul class="nav nav-tabs">
  <li class="active">@Html.ActionLink("Statistics", "Index", "Admin")</li>
  <li>@Html.ActionLink("Players", "Players", "Admin")</li>
  <li>@Html.ActionLink("Holes", "Holes", "Admin")</li>
</ul>
<h2>Calculate Game Statistics <small>Calculates game statistics for month and year or zero for all.</small></h2>
@using (Html.BeginForm("CalculateGameStatistics", "Admin", FormMethod.Post))
{ 
  <label for="game-stats-month">Month</label>
  <input type="number" name="month" id="game-stats-month" value="@DateTime.Today.Month" />
  <label for="game-stats-year">Year</label>
  <input type="number" name="year" id="game-stats-year" value="@DateTime.Today.Year" />
  <div>
    <input type="submit" value="Calculate" class="btn btn-default" />
  </div>
}
