@model BolfTracker.Models.Game
@{    
  ViewBag.Title = "Create Game - Bolf Tracker";
  ViewBag.Section = "Game";
}
<div class="page-header">
  <h1>Create Game</h1>
</div>
@using (Html.BeginForm("Create", "Game", FormMethod.Post))
{
  @Html.LabelFor(model => model.Date)
  @Html.TextBoxFor(model => model.Date, new { @class = "date" })
  <div>
    <input type="submit" class="btn btn-primary" value="Create" />
  </div>
}
